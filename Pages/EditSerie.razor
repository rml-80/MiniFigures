@page "/{serieToShow}/edit"
@using MiniFigures.Data
@using MiniFigures.Models
@inject ISeriesService SeriesService
@inject NavigationManager NavigationManager

<link rel="stylesheet" href="css/card-horizontal-large.css" />

<h3>Edit Serie</h3>
<div>
    <div class="center-chl">
        <div class="OwnCard-chl" style="border-color:@Color">
            <div class="row">
                <div class="label-chl">
                    <label for="Number">Number: </label>
                </div>
                <div>
                    <input form="Number" @bind="@series.Number" />
                </div>
            </div>
            <div class="row">
                <div class="label-chl">
                    <label for="Name">Name: </label>
                </div>
                <div>
                    <input form="Name" @bind="@series.DisplayName" />
                </div>
            </div>
            <div class="row">
                <div class="label-chl">
                    <label for="NumberOfFiguers">Number of figures: </label>
                </div>
                <div>
                    <input form="NumberOfFigures" @bind="@series.NumberOfFigures" />
                </div>
            </div>
            <div class="row">
                <div class="label-chl">
                    <label for="SeriePicture">Path to picture: </label>
                </div>
                <div>
                    <input form="SeriePicture" @bind="@series.SeriePicture" />
                </div>
            </div>
            <div class="row">
                <div class="label-chl">
                    <label for="SeriesColor">Color code: </label>
                </div>
                <div>
                    <input form="SeriesColor" placeholder="@series.SeriesColor" @onchange="@ColorChange" />
                </div>
            </div>
            <div class="buttonsrow-chl">
                <input type="button" @onclick="() => saveSerie(series)" value="Save" />
                <input type="button" @onclick="cancel" value="Cancel" />
                <input type="button" @onclick="deletePromptShow" value="Delete" />
            </div>

        </div>
        <div style="display:@deletePrompt; color:red">
            <p>Sure you want to DELETE this serie?</p>
            <input type="button" @onclick="() => deleteSerie(series.Name)" value="YES" />
            <input type="button" @onclick="deletePromptShow" value="NO" />

        </div>
    </div>
</div>

@code {

    [Parameter]
    public string serieToShow { get; set; }
    public string deletePrompt { get; set; } = "none";
    protected Series series = new Series();
    public string Color { get; set; }
    protected override async Task OnInitializedAsync()
    {
        series = await SeriesService.GetOneSerie(serieToShow);
        Color = series.SeriesColor;
    }
    void saveSerie(Series serie)
    {
        SeriesService.EditSerie(series.Id, series);
        SeriesService.RenameCollection(serieToShow, series.Name);
        NavigationManager.NavigateTo("/", true);
    }
    void deleteSerie(string name)
    {
        SeriesService.DeleteCollection(name);
        SeriesService.DeleteSerie(name);
        NavigationManager.NavigateTo("/", true);
    }
    void ColorChange(ChangeEventArgs args)
    {
        Color = (string)args.Value;
        series.SeriesColor = Color;
    }
    void cancel()
    {
        NavigationManager.NavigateTo($"/{serieToShow}");
    }
    void deletePromptShow()
    {
        if (deletePrompt == "none")
        {
            deletePrompt = "inline";
        }
        else
        {
            deletePrompt = "none";
        }
    }
}
