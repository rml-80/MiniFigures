@page "/addFigure/{serie}"

@using MiniFigures.Data
@using MiniFigures.Models
@using System.IO
@using Microsoft.AspNetCore.Hosting

@inject IWebHostEnvironment env
@inject IMiniFigureService MiniFigureService
@inject ISeriesService SeriesService
@inject NavigationManager NavigationManager

<div class="addCard" style="border-color:@color">
    @*<div class="txtLeftBold" style="color:@serie.SeriesColor">@figure.Number</div>*@
    <label for="Number" style="margin-bottom:0px;padding-top:2rem">Number?</label>
    <input tabindex="1" form="Number" @bind="@miniFigure.Number" class="txtCenter" />
    <br />
    <label for="Name" style="margin-bottom:0px">Name? </label>
    <input tabindex="2" form="Name" @bind="@miniFigure.Name" class="txtCenter" />
    <div class="btnRow">
        <FilesUpload serie="@serie" from="AddFigure" />
    </div>
    <div class="txtCenter" style="position:absolute; bottom:1rem; width:44%">
            <input type="button" value="Save" @onclick="@Add" />
    </div>
</div>

@code {

    [Parameter] public string serie { get; set; }
    [Parameter] public string number { get; set; }
    [Parameter] public string color { get; set; }

    public int Number { get; set; }
    public int Name { get; set; }

    private MiniFigure miniFigure = new MiniFigure();

    private string Color { get; set; } = "lightgrey";

    private async Task Add()
    {
        await MiniFigureService.AddFigure(miniFigure, serie, number );
        NavigationManager.NavigateTo($"/{serie}", true);
    }
}