@page "/addnew/figures/{serie}"

@using MiniFigures.Data
@using MiniFigures.Models

@inject IMiniFigureService MiniFigureService
@inject ISeriesService SeriesService
@inject NavigationManager NavigationManager

<link rel="stylesheet" href="css/AddNewFigures.css">

@if (ListOfMF.Count == series.NumberOfFigures)
{
    <Header serie="series"  amountOfFigures="ListOfMF.Count"/>
    <h3>No more figures to add</h3>
    <div class="txtCenter">
        <input type="button" value="OK" @onclick="cancel" />
    </div>

}
else
{
    <Header serie="series" amountOfFigures="ListOfMF.Count" />
    <h3>Add Figure</h3>
    <div class="card-deck">
        <div class="addCard" style="border-color:@Color">
            <div class="topMargin2">Figures To add: @(series.NumberOfFigures - ListOfMF.Count) </div>
            <select @onchange="@SerieClicked">
                <option value="@serie">@serie</option>
                @foreach (var serie in SeriesList)
                {
                    <option value="@serie.Name">@serie.Name</option>
                }
            </select>
            <label for="Number">Number: </label>
            <input tabindex="1" form="Number" class="txtCenter" @onchange="isExist" />
            <label for="Name">Name: </label>
            <input tabindex="2" form="Name" class="txtCenter" @bind="@OneMF.Name" />
            <div class="marginBig">
                <input class="btn btn-outline-dark" type="button" @onclick="cancel" value="Cancel" />
                <input class="btn btn-outline-success" tabindex="3" type="button" @onclick="@AddNewFigure" value="Save" />
            </div>
        </div>
    </div>
    <div style="display:@ShowWarningForNumber; color:red">
        <h4>Minifigure with Number: @OneMF.Number <br />already exists!</h4>
    </div>
}
@code {
    [Parameter]
    public string serie { get; set; }

    protected MiniFigure OneMF = new MiniFigure();
    protected Series series = new Series();
    protected List<Series> SeriesList = new List<Series>();
    protected List<MiniFigure> ListOfMF = new List<MiniFigure>();

    protected bool Existing { get; set; }

    protected string Color { get; set; } = "lightgrey";
    protected string FigureNumber { get; set; }
    protected string ShowWarningForNumber { get; set; } = "none";

    protected override async Task OnInitializedAsync()
    {
        series = await SeriesService.GetOneSerie(serie);
        Color = series.SeriesColor;
        SeriesList = await SeriesService.GetSeries();
        ListOfMF = MiniFigureService.GetMiniFigures(serie);
    }
    protected async Task AddNewFigure()
    {
        if (Existing)
        {
            ShowWarningForNumber = "inline";
        }
        else
        {
            FigureNumber = OneMF.Number.ToString();
            if (FigureNumber.Length > 1)
            {
                OneMF.Image = $"{series.Number}-{FigureNumber}.jpg";
            }
            else
            {
                OneMF.Image = $"{series.Number}-0{FigureNumber}.jpg";
            }
            OneMF.CountOpened = 0;
            OneMF.CountSealed = 0;
            OneMF.Displayed = false;

            await MiniFigureService.AddFigure(OneMF, serie);
            //NavigationManager.NavigateTo($"/{collectionName}", true);
            NavigationManager.NavigateTo($"/addnew/figures/{serie}", true);
        }
    }
    protected void SerieClicked(ChangeEventArgs args)
    {
        serie = (string)args.Value;
    }
    protected void isExist(ChangeEventArgs args)
    {
        foreach (var figure in ListOfMF)
        {
            if (figure.Number == Convert.ToInt32(args.Value))
            {
                Existing = true;
                break;
            }
        }
        OneMF.Number = Convert.ToInt32(args.Value);
    }
    protected void cancel()
    {
        NavigationManager.NavigateTo($"/{serie}");
    }
}
